{
  "name": "astrolabe",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"npm run build:electron\" \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "npm run build:electron && npm run build:vite && electron-builder",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:vite": "tsc -b && vite build",
    "build:win": "npm run build:electron && npm run build:vite && electron-builder --win",
    "build:mac": "npm run build:electron && npm run build:vite && electron-builder --mac",
    "build:linux": "npm run build:electron && npm run build:vite && electron-builder --linux",
    "build:all": "npm run build:electron && npm run build:vite && electron-builder -mwl",
    "lint": "eslint .",
    "preview": "vite preview",

    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "postinstall": "electron-builder install-app-deps && npm run rebuild"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "drizzle-orm": "^0.45.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.0",
    "electron": "^39.2.7",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}
